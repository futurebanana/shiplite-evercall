service: "{{ docker_systemd_service__name }}"
host: "{{ inventory_hostname }}"

tags:
{% for key, val in (docker_systemd_service__backup.tags | default({})).items() %}
  {{ key }}: {{ val }}
{% endfor %}

policy:
{% for key, val in (docker_systemd_service__backup.policy | default({})).items() %}
  {{ key }}: {{ val }}
{% endfor %}

pre_hooks:
{% for cmd in (docker_systemd_service__backup.pre_hooks | default([])) %}
  - "{{ cmd }}"
{% endfor %}

post_hooks:
{% for cmd in (docker_systemd_service__backup.post_hooks | default([])) %}
  - "{{ cmd }}"
{% endfor %}
